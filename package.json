{
  "name": "monk-server",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "start": "node bin/www",
    "dev": "cross-env NODE_ENV=dev ./node_modules/.bin/nodemon bin/www --trace-warnings",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand --passWithNoTests --colors --forceExit",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand  --passWithNoTests --colors --forceExit",
    "prd-dev": "cross-env NODE_ENV=prd_dev pm2 start bin/pm2-prd-dev.config.js",
    "prd": "cross-env NODE_ENV=production NODE_LOG_DIR=/tmp/monk-server ENABLE_NODE_LOG=YES pm2 start bin/pm2-prd.config.js",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint-fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "standard-version": "standard-version",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.2.2",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.4",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "koa2-cors": "^2.0.6",
    "mongoose": "^6.8.3",
    "mysql2": "^3.0.1",
    "pug": "^2.0.3",
    "redis": "^4.5.1",
    "require-all": "^3.0.0",
    "sequelize": "^6.28.0",
    "simple-git": "^3.15.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "commitizen": "^4.2.6",
    "commitlint-config-cz": "^0.13.3",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "inquirer": "8",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^2.8.3",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run test:local"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
